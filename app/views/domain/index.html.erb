<h1>Denos Domain DNS Central</h1>

<section id="dns-entries" class="table-section">
  <h2>AWS Route53 DNS Entries</h2>
  <table>
    <thead>
      <tr>
        <th>Domain</th>
        <th>IP Addr</th>
        <th>Server Friendly Name</th>
        <th colspan="3">Cluster Name</th>
      </tr>
    </thead>

    <tbody>

    </tbody>
  </table>
</section>
<br>
<section id="app-servers" class="table-section">
  <h2>Servers for Denos</h2>
  <table>
    <thead>
      <tr>
        <th>Friendly Name (Sort Ascending)</th>
        <th>Cluster</th>
        <th>DNS Status (A records)</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @servers.each do |server, index| %>
        <tr>
          <td><%= server.friendly_name %></td>
          <% if server.cluster %>
            <td><%= server.cluster.name %></td>
          <% else %>
            <td>NONE</td>
          <% end %>
          <td>Unknown</td>
          <td>
            <%= link_to "Add to retation", domain_register_path(server) %>
            <%= link_to "Remove from retation", domain_deregister_path(server) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
